{
  "name": "mjfk23/gadget-log",
  "description": "Gadget logging library",
  "type": "library",
  "keywords": [],
  "homepage": "https://github.com/mjfk23/gadget-logging",
  "license": "MIT",
  "authors": [
    {
      "name": "Melody Kimball",
      "role": "lead"
    }
  ],
  "support": {
    "issues": "https://github.com/mjfk23/gadget-logging/issues",
    "wiki": "https://github.com/mjfk23/gadget-logging/wiki",
    "source": "https://github.com/mjfk23/gadget-logging"
  },
  "require": {
    "php": "^8.1",
    "mjfk23/gadget-core": "^2.0",
    "mjfk23/symfony-bundle": "^1.0",
    "monolog/monolog": "^3.7",
    "psr/log": "^3.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.0",
    "phpstan/phpstan-strict-rules": "^2.0",
    "phpstan/extension-installer": "^1.4",
    "squizlabs/php_codesniffer": "^3.10"
  },
  "autoload": {
    "psr-4": {
      "Gadget\\Log\\": ["src/", "bundle/"]
    }
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    },
    "sort-packages": true,
    "optimize-autoloader": true,
    "apcu-autoloader": true
  },
  "scripts": {
    "phpcs": "vendor/bin/phpcs",
    "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon"
  }
}
